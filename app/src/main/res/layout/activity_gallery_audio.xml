<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryAudioActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_titleLayoutUploadSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_titleSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_titleLayoutUploadSong"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="Titre du audio"
        android:textColor="@color/black"
        android:textColorHighlight="@color/green" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@+id/editText_titleSong"
        android:layout_marginTop="@dimen/_20sdp"
        android:indeterminate="true"
        android:indeterminateTint="@color/green"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/linearLayout_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openAudioFile"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_button_save"
                android:padding="@dimen/_7sdp"
                android:text="Selectioner un audio"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_selectedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Aucun fichier selectionnÃ©" />

        </LinearLayout>

    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_upload"
        android:layout_margin="@dimen/_20sdp"
        android:onClick="uploadAudioToFirebase"
        android:background="@drawable/rounded_button_solid"
        android:text="Enregistrer"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>