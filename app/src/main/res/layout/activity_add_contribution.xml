<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddContributionActivity">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="@dimen/_7sdp"
        android:textColor="@color/red"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <EditText
        android:id="@+id/editText_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Date"
        android:textAlignment="center"
        android:layout_below="@+id/textView_title"
        android:padding="@dimen/_7sdp"
        android:focusable="false"
        android:layout_marginTop="@dimen/_15sdp" />

    <EditText
        android:id="@+id/editText_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:hint="Montant cotisation"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="@dimen/_7sdp"
        android:focusable="true"
        android:layout_below="@+id/editText_date"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@+id/editText_amount">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adiya"
            android:id="@+id/adiya"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:buttonTint="@color/blue"
            android:textColor="@color/blue"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sass"
            android:id="@+id/sass"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:buttonTint="@color/blue"
            android:textColor="@color/blue"
            android:textSize="20dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="social"
            android:id="@+id/social"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:buttonTint="@color/blue"
            android:textColor="@color/blue"
            android:textSize="20dp" />

    </RadioGroup>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="Enregistrer"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/radioGroup"
        android:background="@color/green" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="@string/btn_cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/button_save"
        android:background="@color/gray" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="Supprimer cette depense"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/colorAccent"
        android:background="@color/red"
        android:layout_below="@+id/button_cancel"/>
</RelativeLayout>