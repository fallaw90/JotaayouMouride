<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KhassidaFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ib_ht"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/image_ht"
                android:background="@color/green" />

            <ImageView
                android:id="@+id/ib_htdk"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/image_htdk"
                android:background="@color/green" />

            <ImageView
                android:id="@+id/ib_am"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/image_am"
                android:background="@color/green"
                android:contentDescription="Ahlou Minam" />

            <ImageView
                android:id="@+id/ib_radiass"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/image_radiass"
                android:background="@color/green" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>