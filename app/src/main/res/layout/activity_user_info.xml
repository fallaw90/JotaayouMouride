<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_camera"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_below="@+id/relImageView"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelUserName"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/userName"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/textView_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userName"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelPhoneNumber"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/updatePhoneNumber"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/textView_phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/updatePhoneNumber"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelEmail"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/textView_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelAddress"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/textView_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelCommission"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/commission"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/textView_commission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/commission"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelRole"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="@string/role"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/textView_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/role"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#7fa208"
                    android:text="@string/backButton"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>