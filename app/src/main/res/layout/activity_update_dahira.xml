<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDahiraActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/relativeLayout_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView_labelLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/changeLogo"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/imageView_logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/textView_labelLogo"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/profile_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_commission"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/dahiraName"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_dahiraName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:hint="@string/dahiraName"
                            android:padding="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_dieuwrine"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/dieuwrine"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_dieuwrine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:hint="@string/dieuwrine"
                            android:padding="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_phoneNumber"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/updatePhoneNumber"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_dahiraPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:digits="0123456789"
                            android:hint="Telephone (exemple: +221771866656)"
                            android:inputType="phone"
                            android:padding="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_siege"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/siege"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_siege"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:hint="@string/siege"
                            android:padding="10dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/AddCommissionInstruction"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText_commission"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edittext_background"
                            android:fontFamily="sans-serif"
                            android:hint="@string/commission"
                            android:inputType="text"
                            android:padding="10dp" />

                        <EditText
                            android:id="@+id/editText_responsible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edittext_background"
                            android:fontFamily="sans-serif"
                            android:hint="@string/responsible"
                            android:inputType="text"
                            android:padding="10dp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/button_addCommission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:text="@string/addCommission"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button_solid"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/textViewUpdateCommission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/updateCommission"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_labelCommission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/textView_commissionsTitle"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView_labelResponsible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/textView_responsiblesTitle"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listView_commission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/totalAdiya"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_adiya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:focusable="false"
                            android:hint="@string/adiya"
                            android:padding="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/totalSass"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_sass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:focusable="false"
                            android:hint="@string/sass"
                            android:padding="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/totalSocial"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/editText_social"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background"
                            android:focusable="false"
                            android:hint="@string/social"
                            android:padding="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <Button
                        android:id="@+id/button_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/update"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button_solid"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                    <Button
                        android:id="@+id/button_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/backButton"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button_cancel"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Patientez SVP ..."
            android:textSize="@dimen/_20sdp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleLarge"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/green"
            android:indeterminateTintMode="src_atop"
            android:progress="80"
            android:progressDrawable="@drawable/circle" />
    </RelativeLayout>

</RelativeLayout>