<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_dialogAddAdiya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/button_dialogAddAdiya"
        android:textAllCaps="false"
        android:background="@color/green"
        android:textColor="@color/white"  />

    <Button
        android:id="@+id/button_dialogAddSass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/button_dialogAddSass"
        android:textAllCaps="false"
        android:background="@color/green"
        android:textColor="@color/white"  />

    <Button
        android:id="@+id/button_dialogAddSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/button_dialogAddSocial"
        android:background="@color/green"
        android:textAllCaps="false"
        android:textColor="@color/white"  />

    <Button
        android:id="@+id/button_dialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/btn_cancel"
        android:textAllCaps="false"
        android:background="@color/gray"
        android:textColor="@color/white"  />

</LinearLayout>