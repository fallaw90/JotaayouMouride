<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_dialogAddAdiya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/button_dialogAddAdiya"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_solid"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/button_dialogAddSass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/button_dialogAddSass"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_solid"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/button_dialogAddSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/button_dialogAddSocial"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_solid"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/button_dialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/btn_cancel"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_cancel"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>